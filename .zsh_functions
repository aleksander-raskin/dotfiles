zsh_terraform() {
  # break if there is no .terraform directory
  if [[ -f .terraform/environment ]]; then
    local tf_workspace=$(cat .terraform/environment)
    echo -n "$tf_workspace ï¨ˆ"
  fi
}

function tpv(){
  terraform plan --var-file=$1
}

function tpa(){
  terraform apply --var-file=$1
}

